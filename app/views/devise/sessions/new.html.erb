
<div class="h-100 w-100">
<div style="
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  top: 0;
  background: #00000052;
  bottom: 0;
"></div>
<div class="container">

<%= form_for(resource, as: resource_name, html: {id:"login-form", class: 'maxdimensions centeringcomponent w-100 h-100'}, remote: true, url: user_session_path) do |f| %>


<div class="row justify-content-center" style="">
<div class="col-md-8 col-lg-6" style="background: radial-gradient(#030b16, transparent);">
<div class="login-wrap p-0">
<div style="
  width: 100%;
  height: 150px;
  display: inline-block;
  text-align: center;
">
<%= show_svg('login.svg') %>
</div><h3 class="mb-4 text-center" style="font-family: SFProDisplay-Regular, Helvetica, Arial, sans-serif;">Have an account?</h3>
<form action="#" class="signin-form" style="
  /* background: radial-gradient(#030d19, transparent); */
">
<div class="form-group">

<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Username", style: "
border: 1px solid;
font-weight: bold;
padding: 0px 48px 0 30px;font-family: SFProDisplay-Regular, Helvetica, Arial, sans-serif;
"  %>
</div>
<div class="form-group">

<%= f.password_field :password, autocomplete: "current-password", type: "password", class: "form-control", placeholder: "Password", style: "
border: 1px solid;
font-weight: bold;
padding: 0px 48px 0 30px;font-family: SFProDisplay-Regular, Helvetica, Arial, sans-serif;
" %>

<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password" style="
  width: 22px;
  font-size: 21px;
  height: 22px;
"></span>

</div>
<div class="form-group " style="margin-bottom: 10px;">


<% if devise_mapping.rememberable? %>
<div class="w-100">

<span class="checkmark" style="
  position: absolute;
  top: 5px;
"></span>

  <%= f.check_box :remember_me, type: "checkbox", checked: "" %>
  <%= f.label :remember_me, class: "checkbox-wrap checkbox-primary", style: "
  color: white;
  font-size: 1rem;
  height: 22px;
  margin: 0;
  display: inline-block;
  font-family: SFProDisplay-Regular, Helvetica, Arial, sans-serif;
  padding-left: 10px;
" %>
</div>
<% end %>


</div>
<div class="form-group">

<%= f.submit "Log in", type: "submit", class: "form-control btn btn-primary submit px-3", style: "
background: white !important;
border: none !important;font-family: SFProDisplay-Regular, Helvetica, Arial, sans-serif;
font-weight: bold" %>


</div>

<div class="form-group w-100" style="font-size:14px;
display: inline-block !important;
width: 120px;
height: 44px;">

  <%= render "devise/shared/links" %>
</div>

</form>
</div>
</div>
</div>
</div>
<% end %>
</div>